<Window x:Class="CodeBase.Client.Views.ProjectCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeBase.Client.Views"
        mc:Ignorable="d"
        Title="New Project" 
        Height="200" Width="400" 
        WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Project Name" />
            <TextBox x:Name="ProjectName" />
            <Label Content="Location" />
            <TextBox x:Name="ProjectLocation" MouseDoubleClick="PathTextBox_MouseDoubleClick" />
            <Button Content="Add" Margin="70,10,70,10" Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>

<Page x:Class="CodeBase.Client.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeBase.Client.Pages"
      xmlns:controls="clr-namespace:CodeBase.Client.Controls" 
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="SettingsPage">

    <DockPanel Background="#fff">
        <controls:PageHeader x:Name="PageHeader" Title="Settings" DockPanel.Dock="Top" />

        <StackPanel DockPanel.Dock="Bottom">
            <CheckBox x:Name="AutorunCheckBox" Content="Run with Windows" 
                      Margin="20,10" Click="AutorunCheckBox_Click" />
            <CheckBox x:Name="TrayCheckBox" Content="Collapse into Tray" 
                      Margin="20,10" Click="TrayCheckBox_Click" />
        </StackPanel>
    </DockPanel>
</Page>

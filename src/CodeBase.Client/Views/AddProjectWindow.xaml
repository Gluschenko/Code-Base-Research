<Window x:Class="CodeBase.Client.Views.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeBase.Client.Views"
        mc:Ignorable="d"
        Title="AddProjectWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Project Name" VerticalAlignment="Top"/>
            <TextBox x:Name="ProjectName" VerticalAlignment="Top" />
            <Label Content="Path" VerticalAlignment="Top"/>
            <TextBox x:Name="ProjectPath" VerticalAlignment="Top" MouseDoubleClick="PathTextBox_MouseDoubleClick" />

            <Button Content="Add" VerticalAlignment="Bottom" Margin="70,10,70,10" Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>
